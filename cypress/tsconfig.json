{
  //"extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    /* Add the cypress testing-library for typescript */
    "types": ["cypress", "node", "@testing-library/cypress"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "cypress/react": ["./node_modules/@cypress/react"]
    }
  },
  /* Be sure to include the path to the components being tested */
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "../client/src/components/**/*.tsx"
  ]
}
